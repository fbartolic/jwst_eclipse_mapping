}

@article{misra2015,
  title = {Transient {{Sulfate Aerosols}} as a {{Signature}} of {{Exoplanet Volcanism}}},
  author = {Misra, Amit and {Krissansen-Totton}, Joshua and Koehler, Matthew C. and Sholes, Steven},
  year = {2015},
  month = jun,
  journal = {Astrobiology},
  volume = {15},
