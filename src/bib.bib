  keywords = {asteroseismology,methods: data analysis,methods: statistical,planetary systems,stars: rotation},
  file = {/Users/fb90/Zotero/storage/ZFDGTC4P/Foreman-Mackey et al. - 2017 - Fast and Scalable Gaussian Process Modeling with A.pdf}
